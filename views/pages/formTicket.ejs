<body>


    <header>
        <h1>Zgłoś problem</h1>
        <span>Lorem ipsum dolor sit amet consectetur adipisicing elit. Soluta architecto dicta sit deserunt at natus
            repellendus exercitationem? Labore, officiis amet!</span>
    </header>

    <section class="sectionForum">

        <form action="/tickets" method="POST">

            <div class="userData">
                <label for="">
                    <p>Imie i Nazwisko</p>
                    <input type="text" name="imie_nazwisko">
                </label>
                <label for="">
                    <p>Numer wewnętrzny</p>
                    <input type="number" name="numer_wewnetrzny">
                </label>
                <label for="">
                    <p>Miejsce zdarzenia</p>
                    <select name="miejsce_zdarzenia" name="department" id="department">
                        <option disabled selected value="">Wybierz miejsce</option>
                        <option value="oddzial_okulistyki">Oddział Okulistyki</option>
                        <option value="oddzial_chirurgii">Oddział Chirurgii Ogólnej</option>
                        <option value="oddzial_wewnetrzny">Oddział Chorób Wewnętrznych</option>
                        <option value="dyzurka_lekarska">Dyżurka Lekarska</option>
                        <option value="izba_przyjec">Izba Przyjęć</option>
                    </select>
                </label>
            </div>


            <div class="ticketDestination ">
                <div class="boxDepartament">
                    <p>Dział docelowy</p>
                    <div class="select-wrapper">
                        <select name="dzial_docelowy" id="">
                            <option disabled="" selected="" value="">Wybierz dział</option>
                            <option value="it">Dział informatyki</option>
                            <option value="medical_equipment">Aparatura medyczna</option>
                            <option value="electrical">Sekcja elektryczna</option>
                            <option value="construction">Dział budowlany</option>
                            <option value="cybersecurity">Cyberbezpieczenstwo</option>
                        </select>
                    </div>
                </div>

                <div class="boxCategory">
                    <p>Wybierz kategorie</p>
                    <div class="select-wrapper">
                        <select name="kategoria_zgloszenia" id="">
                            <option disabled="" selected="" value="">Wybierz kategorię</option>
                            <option value="it">Wsparcie IT (Komputery, Sieć)</option>
                            <option value="medical">Sprzęt Medyczny</option>
                            <option value="facilities">Utrzymanie Czystości / Budynek</option>
                            <option value="access">Karty Dostępu / Ochrona</option>
                            <option value="other">Inne</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="boxTicket">
                <label for="">
                    <p>Temat zgłoszenia</p>
                    <input placeholder="np. Awaria drukarki na recepcji SOR" name="temat_zgloszenia" type="text">
                </label>

                <label for="">
                    <p>Opis zgłoszenia</p>
                    <textarea name="opis_zgloszenia" id=""></textarea>
                </label>
            </div>

            <div class="CategoryPriority">
                <div class="toggle">
                    <div class="toggle-wrapper priority">
                        <p>Priorytet zgłoszenia</p>
                        <div class="toggle-group">
                            <input type="radio" name="priorytet_zgloszenia" id="priority-low" value="low" checked />
                            <label for="priority-low" class="toggle-label">Niski</label>

                            <input type="radio" name="priorytet_zgloszenia" id="priority-medium" value="medium" />
                            <label for="priority-medium" class="toggle-label">Średni</label>

                            <input type="radio" name="priorytet_zgloszenia" id="priority-high" value="high" />
                            <label for="priority-high" class="toggle-label">Wysoki</label>
                            <div class="slider"></div>
                        </div>
                    </div>

                    <div class="toggle-wrapper repeatability">
                        <p>Powtarzalność</p>
                        <div class="toggle-group">
                            <input type="radio" name="powtarzalnosc" id="freq-once" value="once" checked />
                            <label for="freq-once" class="toggle-label">Jednorazowo</label>

                            <input type="radio" name="powtarzalnosc" id="freq-rare" value="rare" />
                            <label for="freq-rare" class="toggle-label">Rzadko</label>

                            <input type="radio" name="powtarzalnosc" id="freq-frequent" value="frequent" />
                            <label for="freq-frequent" class="toggle-label">Często</label>
                            <div class="slider"></div>
                        </div>
                    </div>

                </div>
            </div>


            <button type="submit" class="btn-submit">
                Wyślij zgłoszenie
            </button>
        </form>

    </section>